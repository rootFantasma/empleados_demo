<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>CRUD EMPLEADOS -BRAND FACTORY</title>
    <link rel="stylesheet" href="https://fantasma.studio/cdn/main.css">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Crud Empleados - Brand Factory" />
    <meta name="image" content="img/Logo_Brand_Factory®_shared.png" />
    <meta name="date" content="2021-04-21" scheme="YYYY-MM-DD" />
</head>

<body >
    <div class="wrap">
       <div class="crud">
           <aside>
            <img class="logo" src="https://fantasma.studio/cdn/Logo_Brand_Factory.webp" alt="">
            <nav>
                <ul>
                    <li>
                        <a href="#">Dashboard</a>
                    </li>
                    <li>
                        <a href="#">Puestos</a>
                    </li>
                    <li>
                        <a href="#">Empleados</a>
                    </li>
                    <li>
                        <a href="#">Compañia</a>
                    </li>
                    <li>
                        <a href="#">Candidatos</a>
                    </li>
                    <li>
                        <a href="#">Eventos</a>
                    </li>
                </ul>
            </nav>
        </aside>
        <div class="formulario ">
            <h1>Empleados</h1>
            <div>
                <hr>
                <ul class="c_agregar">
                    <li><p class="subtitulo">Datos</p></li>
                    <li><a href="/create" class="btn">Agregar</a></li>
                </ul>
                <hr>
            </div>
            <table id="empleados" class="datos">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nombre</th>
                        <th>Apellido</th>
                        <th>Fecha Nacimiento</th>
                        <th>Puesto</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>

                    <% results.forEach((empleados)=> { %>
                    <tr>
                        <td><%= empleados.id %></td>
                        <td><%= empleados.nombre %></td>
                        <td><%= empleados.apellido %></td>
                        <td><%= empleados.nacimiento %></td>
                        <td><%= empleados.puesto %></td>
                        <td>
                            <a href="/edit/<%= empleados.id %>" class="btn">Editar</a>
                            <!-- <a href="/delete/<%= empleados.id %>" class="btn remove">borrar</a> -->
                            <a onclick="confirmar(<%= empleados.id %>);" class="btn remove">Borrar</a>
                        </td>
                    </tr>
                   <% }) %> 
                </tbody>
            </table>
        </div>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script src="https://cdn.datatables.net/1.10.24/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@10.16.5/dist/sweetalert2.all.min.js"></script>
<script>

    $(document).ready(function() {
        $('#empleados').DataTable({
            "responsive": true,
            "language": {
            "search": "Buscar: ",
            "lengthMenu": "Mostrar _MENU_ resultados por página",
            "zeroRecords": "No se encontro ningun resultado",
            "info": "Mostrar página _PAGE_ de _PAGES_",
            "infoEmpty": "No records available",
            "paginate": {
            first:      "Primer ",
            previous:   "Anterior ",
            next:       " Siguiente ",
            last:       "Último"
            },
            "infoFiltered": "(filtered from _MAX_ total records)"
        }
        });
    } );

    function confirmar(id){
        Swal.fire({
          title: '¿Estas seguro?',
          text: "¡No podrás revertir esto!",
          icon: 'advertencia',
          showCancelButton: true,
          confirmButtonColor: '#1a45ff',
          cancelButtonColor: '#ff6e07',
          confirmButtonText: 'Sí, eliminar!'
        }).then((result) => {
          if (result.isConfirmed) {
            window.location = '/delete/'+id;
          }
        })
    }
</script>   
</body>
</html>
